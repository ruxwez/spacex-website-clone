<style lang="scss">
  $menuLineWidth: 20px;
  $menuLineHeight: 1.5px;

  $transitionTime: 0.3s;

  .menuIcon {
    display: block;
    position: relative;
    width: $menuLineWidth;
    height: $menuLineHeight;

    span {
      position: absolute;
      background: white;
      width: 100%;
      height: 100%;
      left: 50%;
      transform: translateX(-50%);
      transition: width $transitionTime;
    }

    &::before,
    &::after {
      content: "";
      position: absolute;
      width: $menuLineWidth;
      height: $menuLineHeight;
      background: white;
      transition:
        transform $transitionTime,
        top $transitionTime;
    }

    &::before {
      top: -5px;
      left: 0;
    }

    &::after {
      top: 5px;
      left: 0;
    }

    &.active {
      span {
        width: 0;
      }
      &::before {
        transform: rotate(45deg);
        top: 0;
      }

      &::after {
        transform: rotate(-45deg);
        top: 0;
      }
    }
  }
</style>
